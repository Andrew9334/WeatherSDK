<configuration>

    <!-- Формат лога -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>[%d{yyyy-MM-dd HH:mm:ss}] [%level] %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Логируем все сообщения уровня INFO и выше -->
    <root level="info">
        <appender-ref ref="STDOUT"/>
    </root>

</configuration>
